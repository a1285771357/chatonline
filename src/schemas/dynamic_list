//实例化用户表,每一个Schema对应MongoDB中的一个集合collection，Schema中定义了集合中文档document的样式
var mongoose = require("mongoose");
var Schema = mongoose.Schema;

var dynamic_list = new Schema({
  username: {
    type: String,
    require: true
  },
  time: {
    type: Date,
    default:Date.now(),
    require: true
  },
  likenum: {
    type: Number,
    require: true
  },
  reviewsnum: {
    type: Number,
    require: true
  },
  dynamicreview: {
    type: String,
    require: true
  },
  color:{
    type:String,
    require: true
  },
  liked:{
    type:Boolean,
    require:true,
    default:false
  },
  reviewdata: [{
    username:String,
    time:{
      type:String,
      default:Date.now()
    },
    reviewcontents:String

  }]
})

module.exports = dynamic_list;

